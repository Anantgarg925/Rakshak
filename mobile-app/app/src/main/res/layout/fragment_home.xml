<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›¡ï¸ Rakshak"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/emergency_gray_dark"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Emergency Alert System"
                android:textSize="16sp"
                android:textColor="@color/emergency_gray"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Inactive"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/emergency_gray_dark"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/status_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency monitoring is currently disabled"
                    android:textSize="14sp"
                    android:textColor="@color/emergency_gray"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/toggle_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Start Detection"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/emergency_button_background"
                    android:elevation="2dp"
                    tools:ignore="VisualLintButtonSize" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_emergency_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/emergency_red"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš¨ Accident Detected!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/emergency_red"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_countdown_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sending alert in 15 seconds..."
                android:textSize="16sp"
                android:textColor="@color/emergency_gray_dark"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_cancel_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Alert"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


        <!-- Sensor Monitoring Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensor_data_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/emergency_gray_dark"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sensor_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_sensor"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Emergency Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/emergency_red"
            app:cardBackgroundColor="@color/emergency_red_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alert"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/emergency_instructions_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/emergency_red_dark" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency_instructions_body"
                    android:textSize="14sp"
                    android:textColor="@color/emergency_gray"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>